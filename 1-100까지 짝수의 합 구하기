total_sum = 0

for num in range(1, 101):
    if num % 2 == 0:
        total_sum += num

print(f"1부터 100까지의 짝수의 합은 {total_sum}입니다.")




even_numbers = [num for num in range(1, 101) if num % 2 == 0]
total_sum = sum(even_numbers)

print(f"1부터 100까지의 짝수의 합은 {total_sum}입니다.")





a = 2
l = 100
d = 2
n = (l - a) // d + 1
total_sum = n * (a + l) // 2

print(f"1부터 100까지의 짝수의 합은 {total_sum}입니다.")